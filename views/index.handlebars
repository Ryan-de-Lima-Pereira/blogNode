<div class="jumbotron">
  <h1 class="display-4">Bem vindo ao Blog do Node</h1>
  <p class="lead">Este é um mini projeto feito usando Node + Express + MongoDB.</p>
  <hr class="my-4">
  <p>Também foi usado Bootstrap</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="#" role="button">Crie uma conta</a>
  </p>
</div>

<hr>

<h2>Postagens recentes</h2>

{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small> <br>
        <small>Data de publicação: {{date}}</small>
    </div>
</div>
{{else}}
    <h4>Sem postagens recentes</h4>
{{/each}}