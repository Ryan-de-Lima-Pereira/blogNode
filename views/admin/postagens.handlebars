<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">

        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{date}}</small> <br>
        <small>Categoria: {{categoria.nome}}</small> <br>
        <a href="/admin/postagens/edit/{{id}}"><button class="btn btn-success mt-2">Editar categoria</button></a>
        <form action="/admin/postagens/delete" method="POST"><input type="hidden" value="{{id}}" name="id">
        <button class="btn btn-danger mt-2" type="submit">Deletar categoria</button>
        </form>
            
    </div>
</div>
{{else}}
    <p>Nenhuma postagem foi registrada!</p>
{{/each}}